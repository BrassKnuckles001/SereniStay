<% layout("/layouts/boilerplate") -%>

    <body>
        <h3 class="heading">All Listings</h3>

        <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
            <% for(let listing of allListings){ %>
                <a href="/pathlistings/<%= listing._id %>" class="listing-link">
                    <div class="card col">
                        <img class="card-img-top" src="<%= listing.image%>" alt="Card image cap" style="height: 18rem;">
                        <div class="card-img-overlay">abcd</div>
                        <div class="card-body">
                            <p class="card-text">
                                <b>
                                    <%=listing.title %>
                                </b><br />
                                &#8377; <%=listing.price.toLocaleString("en-IN") %> / night
                            </p>
                        </div>
                    </div>
                </a>
                <% } %>
        </div>


    </body>