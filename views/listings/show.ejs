<% layout("/layouts/boilerplate") -%>

    <body>

        <div class="row">

            <div class="col-md-8 col-sm-10 offset-md-2 offset-sm-1">
                <h3 class="heading"><%= listing_x.title %></h3>
            </div>

            <div class="col-md-6 col-sm-8 offset-sm-1 offset-md-2">

                <img class="card-img-top show-img" src="<%= listing_x.image %>" alt="Card image cap">
                <br><br>
                <div class="card-body">
                    <p class="card-text">
                        
                        <%= listing_x.description %> <br>
                            &#8377;<%= listing_x.price.toLocaleString("en-IN") %> <br>
                                <%= listing_x.location %> <br>
                                    <%= listing_x.country %>

                    </p>
                </div>

            </div>
            
            <div class="btns offset-2 mt-4">

                    <form action="/pathlistings/<%=listing_x._id %>/edit">
                        <button class="btn edit-del-btn" type="submit">Edit</button>
                    </form>
                
                    <form method="post" action="/pathlistings/<%=listing_x._id %>?_method=DELETE">
                        <button class="btn edit-del-btn" style="background-color: black !important; color: azure !important;" type="submit">Delete</button>
                    </form>
                
            </div>

        </div>

    </body>